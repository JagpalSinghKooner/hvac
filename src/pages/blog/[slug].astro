---
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const publishedPosts = allPosts.filter((post) => post.data.workflowStatus === 'published');

  return publishedPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

// Format date
const publishDate = new Date(post.data.publishDate).toLocaleDateString('en-CA', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.data.seoTitle}</title>
    <meta name="description" content={post.data.seoDescription} />
  </head>
  <body>
    <main>
      <article>
        <header>
          <h1>{post.data.title}</h1>
          <p>{post.data.description}</p>
          <p>
            By {post.data.author} • {publishDate} • {post.data.category}
          </p>
          {post.data.featured && <span>Featured</span>}
        </header>

        {post.data.image && <img src={post.data.image} alt={post.data.title} />}

        <!-- Main Content -->
        <section>
          <Content />
        </section>
      </article>
    </main>
  </body>
</html>
