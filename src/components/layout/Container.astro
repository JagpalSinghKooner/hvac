---
import { cn } from '@/lib/utils';

type Props = {
  size?: 'default' | 'wide' | 'narrow';
  class?: string;
}

const { size = 'default', class: className } = Astro.props as Props;

const sizeClasses: Record<NonNullable<Props['size']>, string> = {
  narrow: 'max-w-3xl',
  default: 'max-w-6xl',
  wide: 'max-w-7xl',
};
---

<div class={cn('mx-auto w-full px-4 sm:px-6', sizeClasses[size], className)}>
  <slot />
</div>
