---
import { cn } from '@/lib/utils';

type Props = {
  as?: 'section' | 'div' | 'main' | 'header' | 'footer';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const { as: Tag = 'section', padding = 'md', class: className } = Astro.props as Props;

const paddingClasses: Record<NonNullable<Props['padding']>, string> = {
  none: 'py-0',
  sm: 'py-8 sm:py-10',
  md: 'py-12 sm:py-16',
  lg: 'py-16 sm:py-24',
};
---

<Tag class={cn(paddingClasses[padding], className)}>
  <slot />
</Tag>
