---
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import PhoneCTA from '@/components/cta/PhoneCTA.astro';
import BookingCTA from '@/components/cta/BookingCTA.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Section padding="lg" class={`bg-muted/30 ${className || ''}`}>
  <Container size="narrow">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-semibold mb-4">Send Us a Message</h2>
      <p class="text-lg text-muted-foreground">
        Get in touch with our team—we're here to help
      </p>
    </div>

    <Card className="text-center max-w-2xl mx-auto">
      <CardHeader>
        <CardTitle className="text-2xl">Contact Form Coming Soon</CardTitle>
        <CardDescription className="text-base mt-2">
          In the meantime, give us a call or book an appointment online—we're here to help 24/7.
        </CardDescription>
      </CardHeader>
      <CardContent>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <PhoneCTA variant="hero" class="text-base h-12 px-8" />
          <BookingCTA variant="hero" class="h-12 px-8" />
        </div>
      </CardContent>
    </Card>
  </Container>
</Section>
