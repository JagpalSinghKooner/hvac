---
import { FAQAccordionReact } from './FAQAccordionReact';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';

interface Props {
  faqs: Array<{
    question: string;
    answer: string;
  }>;
}

const { faqs } = Astro.props;
---

<Section padding="lg">
  <Container size="narrow">
    <div class="text-center mb-12">
      <h2 class="font-heading text-h2 mb-4">Frequently Asked Questions</h2>
    </div>

    <FAQAccordionReact faqs={faqs} client:load />
  </Container>
</Section>
