---
/**
 * ProofSection Component
 *
 * Displays a customer testimonial with social proof.
 * Used on both service and service-city pages.
 *
 * @example
 * <ProofSection
 *   testimonial="The technician was professional and thorough..."
 *   customerName="Sarah Johnson"
 *   customerLocation="Guelph, ON"
 *   result="30% reduction in heating bills"
 *   variant="primary"
 * />
 */
import { Card, CardContent, CardHeader } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Quote } from 'lucide-react';

interface Props {
  testimonial: string;
  customerName: string;
  customerLocation: string;
  result?: string;
  variant?: 'default' | 'muted' | 'primary';
}

const { testimonial, customerName, customerLocation, result, variant = 'primary' } = Astro.props;

const variantClasses = {
  default: 'bg-background',
  muted: 'bg-muted/30',
  primary: 'bg-primary/5',
};

// Handle missing testimonial gracefully
if (!testimonial || testimonial.trim() === '') {
  return null;
}
---

<section class={`py-16 md:py-24 ${variantClasses[variant]}`}>
  <div class="container mx-auto px-4 md:px-6">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Local Success Story
        </h2>
        <p class="text-muted-foreground text-lg">
          Real results from your neighbourhood
        </p>
      </div>

      <Card className="border-primary/20 bg-primary/5">
        <CardHeader>
          <div class="flex items-start gap-4">
            <div class="text-primary flex-shrink-0">
              <Quote className="w-8 h-8" />
            </div>
            <div class="flex-1">
              <p class="text-lg leading-relaxed mb-4">
                "{testimonial}"
              </p>
            </div>
          </div>
        </CardHeader>
        <CardContent>
          <div class="space-y-3">
            <div>
              <p class="font-semibold text-base">
                {customerName}
              </p>
              <p class="text-sm text-muted-foreground">
                {customerLocation}
              </p>
            </div>
            {
              result && (
                <Badge variant="secondary" className="text-sm">
                  {result}
                </Badge>
              )
            }
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
