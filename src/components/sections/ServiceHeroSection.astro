---
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Phone } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  category: string;
  serviceType?: string;
  phoneNumber: string;
  phoneDisplay: string;
  // Phase 8A: City-specific hero content
  cityHero?: {
    title: string;
    description: string;
  };
  // Phase 8A: Internal navigation links
  serviceSlug?: string;
  locationSlug?: string;
  cityName?: string;
  serviceName?: string;
}

const {
  title,
  description,
  category,
  serviceType,
  phoneNumber,
  phoneDisplay,
  cityHero,
  serviceSlug,
  locationSlug,
  cityName,
  serviceName
} = Astro.props;

// Use city-specific content when available, else fallback to service content
const displayTitle = cityHero?.title || title;
const displayDescription = cityHero?.description || description;

// Show internal links only when all required data present (service-city pages only)
const showInternalLinks = serviceSlug && locationSlug && cityName && serviceName;
---

<section class="relative w-full bg-background py-12 md:py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left space-y-6">
        <!-- Category Badge -->
        <div>
          <Badge variant="secondary" className="text-sm font-medium">
            {category}
          </Badge>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-foreground leading-tight">
          {displayTitle}
        </h1>

        <!-- Description -->
        <p class="text-lg md:text-xl text-muted-foreground leading-relaxed">
          {displayDescription}
        </p>

        <!-- Phase 8A: Internal navigation links (service-city pages only) -->
        {showInternalLinks && (
          <div class="flex flex-wrap gap-4 text-sm text-muted-foreground">
            <a
              href={`/services/${serviceSlug}`}
              class="inline-flex items-center gap-1 hover:text-foreground transition-colors duration-200 underline underline-offset-4"
            >
              Learn more about {serviceName}
            </a>
            <span aria-hidden="true" class="text-muted-foreground/50">•</span>
            <a
              href={`/locations/${locationSlug}`}
              class="inline-flex items-center gap-1 hover:text-foreground transition-colors duration-200 underline underline-offset-4"
            >
              See all services in {cityName}
            </a>
          </div>
        )}

        <!-- CTA Button -->
        <div class="pt-4">
          <a
            href={`tel:${phoneNumber}`}
            class="inline-flex"
          >
            <Button size="lg" className="h-14 px-8 text-lg font-semibold gap-2">
              <Phone className="h-5 w-5" />
              Call for Free Quote
            </Button>
          </a>
          <p class="mt-3 text-sm text-muted-foreground">
            {phoneDisplay}
          </p>
        </div>
      </div>

      <!-- Image Placeholder -->
      <div class="order-first lg:order-last">
        <div class="bg-muted aspect-video rounded-lg flex items-center justify-center text-muted-foreground text-sm font-medium">
          Service Hero Image — {title}
        </div>
      </div>
    </div>
  </div>
</section>
