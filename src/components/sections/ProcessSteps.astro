---
import { Card, CardHeader, CardTitle, CardContent } from '@/components/ui/card';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';

interface Props {
  steps: Array<{
    step: number;
    title: string;
    description: string;
  }>;
}

const { steps } = Astro.props;
---

<Section padding="lg" class="bg-muted/30">
  <Container size="narrow">
    <h2 class="font-heading text-h2 text-center mb-12">Our Process</h2>

    <div class="relative space-y-6">
      {/* Vertical gradient connecting line (desktop only) */}
      <div class="absolute left-6 top-6 bottom-6 w-0.5 bg-gradient-to-b from-primary via-secondary to-primary hidden md:block" />

      {steps.map((step) => (
        <div class="relative flex gap-6 group">
          {/* Gradient step number badge */}
          <div class="relative w-12 h-12 rounded-full p-0.5 gradient-brand shrink-0 z-10 transition-transform duration-300 group-hover:scale-110">
            <div class="w-full h-full bg-white rounded-full flex items-center justify-center">
              <span class="text-lg font-bold text-primary font-heading">{step.step}</span>
            </div>
          </div>

          {/* Step content card with hover lift */}
          <Card className="flex-1 transition-all duration-300 hover:shadow-card-hover group-hover:-translate-y-1">
            <CardHeader>
              <CardTitle className="font-heading">{step.title}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-600">{step.description}</p>
            </CardContent>
          </Card>
        </div>
      ))}
    </div>
  </Container>
</Section>
