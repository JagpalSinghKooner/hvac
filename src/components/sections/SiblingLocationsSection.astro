---
import { Badge } from '@/components/ui/badge';

interface Props {
  currentLocation: string;
  region: string;
  siblingLocations: Array<{ name: string; slug: string }>;
}

const { currentLocation, region, siblingLocations } = Astro.props;

// Don't render if no sibling locations
if (!siblingLocations || siblingLocations.length === 0) {
  return null;
}
---

<section class="py-16 md:py-24 bg-muted/50">
  <div class="container mx-auto px-4 md:px-6 max-w-7xl">
    {/* Headline */}
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Also Serving {region}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Premium HVAC services throughout the region
      </p>
    </div>

    {/* Locations Grid */}
    <div class="flex flex-wrap gap-3 justify-center max-w-4xl mx-auto">
      {/* Current location - visually distinct but not linked */}
      <Badge variant="default" className="text-sm py-2 px-4">
        {currentLocation}
      </Badge>

      {/* Sibling locations - linked */}
      {siblingLocations.map((location) => (
        <a href={`/locations/${location.slug}`} class="inline-block">
          <Badge variant="outline" className="text-sm py-2 px-4 hover:bg-accent hover:text-accent-foreground transition-colors">
            {location.name}
          </Badge>
        </a>
      ))}
    </div>
  </div>
</section>
