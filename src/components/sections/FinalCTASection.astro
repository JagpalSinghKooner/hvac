---
import { getEntry } from 'astro:content';
import { Button } from '@/components/ui/button';
import { Check } from 'lucide-react';

interface Props {
  // Phase 8A: City-specific CTA content
  headline?: string;
  copy?: string;
  cityName?: string;
}

const { headline, copy, cityName } = Astro.props;

const businessProfile = await getEntry('business', 'profile');
const phoneDisplay = businessProfile?.data.contact?.phone_display || '+1 519-835-4858';
const phoneE164 = businessProfile?.data.contact?.phone_e164 || '+15198354858';
const email = businessProfile?.data.contact?.email || 'info@bapheating.ca';

// Use city-specific content when available, else fallback
const displayHeadline = headline || "Get Your Free Installation Estimate";
const displayCopy = copy ||
  (cityName
    ? `Ready to upgrade your ${cityName} home? Call now for a free consultation with zero obligation.`
    : "No obligation • Same-day response • 10-year warranty");

// Same trust bullets as Expert Consultation section (US-006)
const trustBullets = [
  '30+ Years Experience',
  'Free Phone Estimates',
  'No Obligation — No Pressure',
  'Licensed & Certified Technicians',
];
---

<section class="py-16 md:py-20 lg:py-24 bg-primary/5">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="max-w-3xl mx-auto text-center">
      {/* Header */}
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 md:mb-6">
        {displayHeadline}
      </h2>
      <p class="text-lg text-muted-foreground mb-8">
        {displayCopy}
      </p>

      {/* Trust Bullets */}
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8 max-w-2xl mx-auto">
        {trustBullets.map((bullet) => (
          <div class="flex items-center gap-3 text-left">
            <div class="flex-shrink-0 h-6 w-6 rounded-full bg-primary/10 flex items-center justify-center">
              <Check className="h-4 w-4 text-primary" />
            </div>
            <span class="text-base font-medium">{bullet}</span>
          </div>
        ))}
      </div>

      {/* CTAs */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <Button size="lg" className="h-14 px-8" asChild>
          <a href={`tel:${phoneE164}`}>
            Call {phoneDisplay}
          </a>
        </Button>
        <Button variant="outline" size="lg" className="h-14 px-8" asChild>
          <a href={`mailto:${email}`}>
            Email Us
          </a>
        </Button>
      </div>
    </div>
  </div>
</section>
