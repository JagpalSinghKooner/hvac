---
import { Badge } from '@/components/ui/badge';

interface Props {
  headline: string;
  description: string;
  differentiators: string[];
  imageAlt?: string;
  reversed?: boolean;
}

const { headline, description, differentiators, imageAlt, reversed = false } = Astro.props;
---

<section class="py-16 md:py-20 lg:py-24 bg-background">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 lg:gap-16 items-center">
      <!-- Image Placeholder (Left by default, right if reversed) -->
      <div class={reversed ? 'md:order-2' : ''}>
        <div class="bg-muted aspect-video rounded-xl flex items-center justify-center text-muted-foreground text-sm shadow-sm border border-border/50 transition-shadow hover:shadow-md">
          {imageAlt || "HVAC Solution Image — 800×600"}
        </div>
      </div>

      <!-- Text Content (Right by default, left if reversed) -->
      <div class={`space-y-6 ${reversed ? 'md:order-1' : ''}`}>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight">
          {headline}
        </h2>

        <p class="text-lg md:text-xl text-muted-foreground leading-relaxed">
          {description}
        </p>

        {differentiators && differentiators.length > 0 && (
          <div class="flex flex-wrap gap-2 md:gap-3 mt-8" role="list">
            {differentiators.map((item) => (
              <Badge
                variant="secondary"
                className="text-sm md:text-base px-4 py-2 font-medium transition-all hover:scale-105 hover:shadow-sm"
              >
                {item}
              </Badge>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  /* Match ProblemSection's refined serif for headlines */
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&display=swap');

  h2 {
    font-family: 'Playfair Display', Georgia, serif;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  /* Subtle entrance animation for badges */
  [role="list"] > :global(.badge) {
    animation: fadeInUp 0.4s ease-out backwards;
  }

  [role="list"] > :global(.badge:nth-child(1)) { animation-delay: 0.05s; }
  [role="list"] > :global(.badge:nth-child(2)) { animation-delay: 0.1s; }
  [role="list"] > :global(.badge:nth-child(3)) { animation-delay: 0.15s; }
  [role="list"] > :global(.badge:nth-child(4)) { animation-delay: 0.2s; }
  [role="list"] > :global(.badge:nth-child(5)) { animation-delay: 0.25s; }
  [role="list"] > :global(.badge:nth-child(6)) { animation-delay: 0.3s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
