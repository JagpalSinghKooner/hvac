---
import { getEntry } from 'astro:content';
import { Button } from '@/components/ui/button';
import { Phone } from 'lucide-react';

const businessProfile = await getEntry('business', 'profile');
if (!businessProfile) {
  throw new Error('Business profile not found');
}
const business = businessProfile.data.business;
const contact = businessProfile.data.contact;
const reputation = businessProfile.data.reputation;
---

<section class="relative w-full overflow-hidden bg-background">
  <!-- Background placeholder -->
  <div class="absolute inset-0 bg-muted">
    <div class="flex items-center justify-center h-full text-muted-foreground text-sm font-medium">
      Hero Image — 1920×800 (Premium HVAC Installation)
    </div>
  </div>

  <!-- Overlay for text readability -->
  <div class="absolute inset-0 bg-background/60"></div>

  <!-- Content -->
  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="flex items-center justify-center min-h-[500px] md:min-h-[600px] py-16 md:py-20 lg:py-24">
      <div class="max-w-4xl text-center space-y-6">
        <!-- Main Heading -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-foreground leading-tight">
          Premium HVAC Installation for Southern Ontario Homes
        </h1>

        <!-- Trust Line -->
        <div class="flex flex-wrap items-center justify-center gap-4 text-base sm:text-lg text-muted-foreground">
          <span class="font-medium">Since {business.established_year}</span>
          <span class="text-muted-foreground/40">•</span>
          <span class="font-medium flex items-center gap-1">
            <span class="text-yellow-500">★</span>
            {reputation.google_rating} from {reputation.google_review_count}+ reviews
          </span>
        </div>

        <!-- Rebate Mention -->
        <div class="inline-block px-6 py-3 bg-primary/10 border border-primary/20 rounded-lg">
          <p class="text-base sm:text-lg font-semibold text-foreground">
            Up to $10,000 in government rebates available
          </p>
        </div>

        <!-- CTA -->
        <div class="pt-4">
          <a
            href={`tel:${contact.phone_e164}`}
            class="inline-flex"
          >
            <Button size="lg" className="h-14 px-8 text-lg font-semibold gap-2">
              <Phone className="h-5 w-5" />
              Get a Free Installation Quote
            </Button>
          </a>
          <p class="mt-3 text-sm text-muted-foreground">
            {contact.phone_display}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
