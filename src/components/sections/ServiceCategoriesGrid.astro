---
import { getEntry } from "astro:content";
import CategoryCard from "@/components/cards/CategoryCard.astro";

const businessProfile = await getEntry("business", "profile");

// Get the first 6 categories for the homepage (Heating through Maintenance Plans)
const categories = businessProfile?.data.services?.navbar_categories?.slice(0, 6) || [];
---

<section class="py-16 md:py-20 lg:py-24 bg-muted">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="mb-8 md:mb-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 md:mb-6">
        Complete HVAC Services
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        From installation to maintenance, we handle all your heating, cooling, and indoor air quality needs.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {categories.map((category) => (
        <CategoryCard category={category} />
      ))}
    </div>
  </div>
</section>
