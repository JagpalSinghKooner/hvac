---
import { Button } from '@/components/ui/button';
import { Star } from 'lucide-react';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';
import { getEntry } from 'astro:content';

const businessProfile = await getEntry('business', 'profile');
if (!businessProfile) {
  throw new Error('Business profile not found');
}
const business = businessProfile.data as any; // Cast to any due to .passthrough() in schema
const rating = business.reputation.google_rating;
const reviewCount = business.reputation.google_review_count;
---

<Section padding="lg" class="bg-muted/30">
  <Container size="narrow">
    <div class="text-center">
      <div class="flex items-center justify-center gap-2 mb-4">
        <span class="text-5xl font-bold">{rating}</span>
        <div class="flex text-yellow-500">
          {[...Array(5)].map(() => (
            <Star className="h-6 w-6 fill-current" />
          ))}
        </div>
      </div>

      <p class="text-lg text-muted-foreground mb-6">
        Based on {reviewCount} Google reviews
      </p>

      <Button variant="outline" size="lg" asChild>
        <a href="https://www.google.com/maps" target="_blank" rel="noopener noreferrer">
          Read Our Reviews on Google
        </a>
      </Button>
    </div>
  </Container>
</Section>
