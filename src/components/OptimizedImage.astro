---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  quality?: number;
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className,
  quality = 80,
} = Astro.props;

// Validate alt text
if (!alt || alt.trim().length === 0) {
  throw new Error(`OptimizedImage requires non-empty alt text. Image source: ${src}`);
}
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
  quality={quality}
/>
