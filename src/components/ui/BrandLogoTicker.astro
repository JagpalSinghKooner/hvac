---
/**
 * BrandLogoTicker Component
 *
 * Displays certified brand dealer logos in a continuous horizontal scroll animation.
 * Uses CSS-only animation with seamless looping and hover pause.
 *
 * Features:
 * - Continuous scroll (CSS @keyframes)
 * - Pauses on hover (desktop)
 * - Duplicates logos for seamless loop
 * - Premium brand positioning
 *
 * @component
 */
---

<section class="brand-logo-ticker bg-background py-12">
  <div class="container mx-auto px-6">
    <div class="text-center mb-8">
      <p class="text-sm font-medium tracking-wide text-muted-foreground uppercase">
        Certified Dealer
      </p>
    </div>

    <div class="ticker-wrapper">
      <div class="ticker-track">
        <!-- First set of logos -->
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Carrier</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Daikin</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Lennox</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Trane</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Goodman</span>
          </div>
        </div>

        <!-- Duplicate set for seamless loop -->
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Carrier</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Daikin</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Lennox</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Trane</span>
          </div>
        </div>
        <div class="ticker-item">
          <div class="brand-logo">
            <span>Goodman</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ticker-wrapper {
    overflow: hidden;
    width: 100%;
    position: relative;
  }

  .ticker-track {
    display: flex;
    width: max-content;
    animation: scroll 30s linear infinite;
    gap: 3rem;
  }

  .ticker-track:hover {
    animation-play-state: paused;
  }

  .ticker-item {
    flex-shrink: 0;
  }

  .brand-logo {
    width: 160px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: hsl(var(--muted));
    border-radius: 0.5rem;
    border: 1px solid hsl(var(--border));
    transition: all 0.2s ease;
  }

  .brand-logo:hover {
    background-color: hsl(var(--muted) / 0.7);
    border-color: hsl(var(--border) / 0.8);
  }

  .brand-logo span {
    font-size: 1.125rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    text-align: center;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Mobile optimization - slower scroll */
  @media (max-width: 768px) {
    .ticker-track {
      animation-duration: 40s;
      gap: 2rem;
    }

    .brand-logo {
      width: 140px;
      height: 90px;
    }

    .brand-logo span {
      font-size: 1rem;
    }
  }
</style>
